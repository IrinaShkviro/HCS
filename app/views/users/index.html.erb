<% provide(:title, 'All users') %>
<h1>All users</h1>

<% @users.each do |user|%>
    <%= gravatar_for user, size: 52 %>
    <%= link_to user.name, user %>
  <% if current_user.admin?%>
  | <%= link_to "edit", edit_user_path(user) %>
  <% if !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
  <% end %>
</br>
</br>
</br>
<% end %>

