<%= form_for @user do |f| %>

<% if signed_in? && current_user.admin? %>

<p>
<%= f.label :surname %>
<br>
  <%= f.text_field :surname %>
</br>
</p>

<p>
<%= f.label :name %>
<br>
  <%= f.text_field :name %>
</br>
</p>


<p>
<%= f.label :patronymic %>
<br>
  <%= f.text_field :patronymic %>
</br>
</p>

<p>
<%= f.label :group %>
<br>
  <%= f.text_field :group %>
</br>
</p>

<% end %>

<p>
<%= f.label :phone %>
<br>
  <%= f.text_field :phone %>
<br>
</p>

<% if signed_in? && current_user.admin? %>

<p>
<%= f.label :admin %>
<br>
  <%= f.text_field :admin %>
</br>
</p>

<% end %>

<% if signed_in? && ((current_user.id == @user.id) || current_user.admin? )%>

<p>
<%= f.label :password %>
<br>
  <%= f.password_field :password %>
</br>
</p>


<p>
<%= f.label :password_confirmation, "Confirm Password" %>
<br>
  <%= f.password_field :password_confirmation %>
</br>
</p>

<% end %>

<p>
<%= f.submit %>
</p>

<% end %>
